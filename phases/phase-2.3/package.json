{
  "name": "prevhub-analytics-module",
  "version": "2.3.0",
  "description": "Module Rapports et Analytics avancÃ© pour ERP PrevHub avec Business Intelligence et visualisations interactives",
  "main": "analytics-api.js",
  "scripts": {
    "start": "node analytics-api.js",
    "dev": "nodemon analytics-api.js",
    "test": "jest",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "deploy": "./deploy-phase-2-3.sh",
    "validate": "npm run test && npm run lint",
    "lint": "eslint *.js",
    "format": "prettier --write *.js *.jsx",
    "docs": "jsdoc -d docs *.js",
    "backup": "pg_dump prevhub > backup_$(date +%Y%m%d_%H%M%S).sql",
    "migrate": "node migrations/run.js",
    "seed": "node seeds/analytics-demo-data.js"
  },
  "keywords": [
    "erp",
    "analytics",
    "business-intelligence",
    "dashboard",
    "reporting",
    "data-visualization",
    "kpi",
    "metrics",
    "charts",
    "prevhub"
  ],
  "author": "Manus AI - ERP PrevHub Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5",
    "csv-parser": "^3.0.0",
    "json2csv": "^6.1.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "jsdoc": "^4.0.2",
    "@types/node": "^20.8.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.8.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/prevhub/erp-analytics.git"
  },
  "bugs": {
    "url": "https://github.com/prevhub/erp-analytics/issues"
  },
  "homepage": "https://prevhub.com/analytics",
  "config": {
    "port": 3003,
    "db_host": "localhost",
    "db_port": 5432,
    "db_name": "prevhub",
    "jwt_expiry": "24h"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": ["**/__tests__/**/*.js", "**/?(*.)+(spec|test).js"]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}

